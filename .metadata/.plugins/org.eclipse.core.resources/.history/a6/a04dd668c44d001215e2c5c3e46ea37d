
public class Prostokat extends Figura{
	
	private double a;
	private double b;
	
	public Prostokat(){
		this(1, 2);
	}
	
	public Prostokat(double a, double b){
		this.a = a;
		this.b = b;
	}
	
	public Prostokat(double a, double b, String k, boolean w){
		this(a, b);
		super(k, w);
	}
	
	public double pole(){
		return a*b;
	}
	
	public double obwod(){
		return 2*a + 2*b;
	}
	
	public String toString(){
		return "Nazwa: "+getClass().getName()+"\n"+
				"boki: "+a+", "+b+
				", obw√≥d: "+this.obwod()+", pole: "+this.pole();
	}

}
